<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:layout_marginTop="45dp"
          android:padding="3dp"
         android:background="#64B5F6"

        >

        <TextView
            android:id="@+id/text1"
            android:layout_width="202dp"
            android:layout_height="33dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_marginVertical="20dp"
            android:padding="3dp"
            android:text="Enter your MASS :"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#ccc"
            android:textColor="#222"/>

    <EditText
        android:id="@+id/mass_value"
        android:layout_width="101dp"
        android:layout_height="33dp"
        android:layout_above="@+id/text2"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-92dp"
        android:hint="@string/mass"
        android:inputType="number|numberDecimal"
        android:textAlignment="center"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/unit_mass"
        android:layout_width="120dp"
        android:layout_height="33dp"

        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/mass_value"
        android:layout_marginStart="120dp"
        android:entries="@array/mass_unit" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="202dp"
        android:layout_height="33dp"
        android:textColor="#222"

        android:layout_alignParentTop="true"
        android:layout_marginTop="102dp"
        android:background="#ccc"
        android:padding="3dp"
        android:text="Enter your Height: "
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/height_value"
        android:layout_width="101dp"
        android:layout_height="33dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="142dp"

        android:hint="@string/height"
        android:inputType="number|numberDecimal"
        android:textAlignment="center"
        android:textSize="15sp" />

    <Spinner

        android:id="@+id/unit_height"
        android:layout_width="121dp"
        android:layout_height="33dp"

        android:layout_alignStart="@+id/unit_mass"
        android:layout_alignTop="@+id/height_value"
        android:entries="@array/height_unit"
        android:padding="5dp" />


    <Button
        android:id="@+id/btn_sub"
        android:layout_width="150dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="212dp"
        android:text="Calulate BMI"

        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/reset"
        android:layout_width="94dp"
        android:layout_height="31dp"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn_sub"
        android:layout_marginTop="265dp"
        android:text="Reset"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>