<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage">

    <TextView
        android:id="@+id/name"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/getName"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/dept"
        android:layout_toRightOf="@+id/dept" />

    <TextView
        android:id="@+id/dept"
        android:layout_width="83dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="69dp"
        android:text="Department"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/getDept"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dept"
        android:layout_alignEnd="@+id/getName"
        android:ems="10"
        android:layout_alignRight="@+id/getName" />

    <Button
        android:id="@+id/bSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="190dp"
        android:text="Register"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="36dp" />

    <RadioGroup
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="116dp"
        android:layout_toEndOf="@+id/bSubmit"
        android:layout_toRightOf="@+id/bSubmit">

        <RadioButton
            android:id="@+id/sFemale"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Female" />

        <RadioButton
            android:id="@+id/sMale"
            android:layout_width="121dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="Male" />
    </RadioGroup>

    <TextView
        android:id="@+id/gender"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="123dp"
        android:text="Gender"
        android:textSize="20dp"
        android:layout_alignParentLeft="true" />

</RelativeLayout>